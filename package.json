{
    "name": "Elastron",
    "version": "1.6.2",
    "description": "Full featured elasticsearch client",
    "type": "module",
    "main": "main.js",
    "scripts": {
        "build": "rollup -c --bundleConfigAsCjs",
        "dev": "rollup -c -w --bundleConfigAsCjs",
        "start-local": "sirv public",
        "start": "ENV=development electron .",
        "start:prod": "electron .",
        "dist-mac": "electron-builder -m",
        "dist-win": "electron-builder -w",
        "dist-linux": "electron-builder -l",
        "dist": "electron-builder -mwl",
        "release": "electron-builder -mwl --publish=onTagOrDraft",
        "upgrade-all": "yarn upgrade-interactive --latest"
    },
    "repository": "https://github.com/antonkorotkov/elastron",
    "keywords": [
        "Electron",
        "elasticsearch",
        "gui"
    ],
    "author": "Anton Korotkov",
    "license": "MIT",
    "build": {
        "files": [
            "app",
            "node_modules",
            "public",
            "main.js"
        ],
        "appId": "com.elastron.www",
        "mac": {
            "category": "db.development.tools",
            "icon": "public/icon.icns",
            "gatekeeperAssess": false,
            "mergeASARs": false,
            "target": [
                {
                    "target": "default",
                    "arch": [
                        "universal"
                    ]
                }
            ],
            "publish": {
                "provider": "github",
                "repo": "elastron",
                "owner": "antonkorotkov"
            }
        },
        "win": {
            "icon": "public/icon.png",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ],
            "publish": {
                "provider": "github",
                "repo": "elastron",
                "owner": "antonkorotkov"
            }
        },
        "linux": {
            "icon": "public/icon.png",
            "category": "Utility",
            "publish": {
                "provider": "github",
                "repo": "elastron",
                "owner": "antonkorotkov"
            }
        }
    },
    "dependencies": {
        "@electron/remote": "^2.1.2",
        "axios": "^1.9.0",
        "call-bind-apply-helpers": "^1.0.2",
        "elasticdump": "^6.119.1",
        "electron-updater": "^6.6.2",
        "lodash": "^4.17.21"
    },
    "devDependencies": {
        "@eslint/js": "^9.26.0",
        "@rollup/plugin-commonjs": "^28.0.3",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^16.0.1",
        "@storeon/router": "~2.0.1",
        "@storeon/svelte": "~1.0.0",
        "@types/lodash": "^4.17.16",
        "compare-versions": "~6.1.1",
        "electron": "^34.2.0",
        "electron-builder": "^25.1.8",
        "eslint": "^9.26.0",
        "eslint-plugin-svelte": "^3.5.1",
        "globals": "^16.0.0",
        "jsoneditor": "~10.2.0",
        "local-storage": "~2.0.0",
        "node-sass": "^9.0.0",
        "percent-to-hex": "~1.0.1",
        "rollup": "^4.40.1",
        "rollup-plugin-css-only": "^4.5.2",
        "rollup-plugin-livereload": "^2.0.0",
        "rollup-plugin-replace": "^2.2.0",
        "rollup-plugin-svelte": "^7.2.2",
        "rollup-plugin-terser": "^7.0.2",
        "sirv-cli": "^3.0.1",
        "storeon": "~3.1.5",
        "svelte": "^5.28.2",
        "svelte-preprocess": "^6.0.3",
        "svelte-select": "~4.4.7"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 2,
        "arrowParens": "avoid",
        "semi": false,
        "singleQuote": true
    }
}
